<%= form_tag '', method: :get, class: 'summon-form search-query-form clearfix navbar-form', role: 'search' do %>
    <div class="input-group">
      <label for="q" class="sr-only"><%= t('blacklight.search.form.search.label') %></label>
      <%= text_field_tag :q, params[:q], placeholder: t('franklin.bento_search.label'), class: "search_q q form-control", id: "q", data: { autocomplete_enabled: autocomplete_enabled?, autocomplete_path: blacklight.suggest_index_path }  %>
      <span class="input-group-btn">
      <button type="submit" class="btn btn-primary search-btn" id="search">
        <span class="submit-search-text"><%= t('blacklight.search.form.submit') %></span>
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </span>
    </div>
    <div class="limit-options">
      <div class="checkbox">
        <label>
          <input value="IsScholarly,true,f" name="fvf" id="articleCheckBoxPeerReview" type="checkbox"> Scholarly &amp; peer-review only
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input value="IsFullText,true,f" name="fvf" id="articleCheckBoxFulltext" type="checkbox"> Full text only
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input value="ContentType,Newspaper Article,t" name="fvf" id="articleFilter1" type="checkbox"> Exclude Newspapers
        </label>
      </div>
    </div>
<% end %>
