
<!-- special suffixes for xml strings that break Dueber's *_xml_stored_single because
     that fieldType copies to a Str limited to 32k. These copy to a text field. -->

<dynamicField name="*_xml_stored_large" type="ignored" indexed="false" stored="false" multiValued="true" />
<copyField source="*_xml_stored_large" dest="*_xml" />
<copyField source="*_xml_stored_large" dest="*_text_a" />
<dynamicField name="*_xml_stored_single_large" type="ignored" indexed="false" stored="false" multiValued="false" />
<copyField source="*_xml_stored_single_large" dest="*_xml" />
<copyField source="*_xml_stored_single_large" dest="*_text" />

<dynamicField name="*_text_a" type="text" indexed="false" stored="true" multiValued="true" />
<dynamicField name="*_text" type="text" indexed="false" stored="true" multiValued="false" />

<dynamicField name="*_shingles" type="shingles" />

<dynamicField name="*_si" type="string" indexed="true" stored="false" multiValued="false" docValues="false" omitNorms="true" />

<field name="access_f" type="string" indexed="true" stored="false" multiValued="true" docValues="true" />
<field name="call_number_xfacet" type="call_number_xfacet" indexed="true" stored="false" multiValued="true" />
<dynamicField name="*_xfacet" type="xfacet" indexed="true" stored="false" multiValued="true" />
<dynamicField name="*_xfacet2" type="xfacet2" indexed="true" stored="false" multiValued="true" />
<dynamicField name="*_xfacet2_input" type="xfacet2_input" indexed="true" stored="false" multiValued="true" />
